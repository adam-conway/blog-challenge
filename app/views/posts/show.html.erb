<p id="notice"><%= notice %></p>

<h1><%= @post.name %></h1>
<p><%= @post.body %><p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


<h3>Comment on post</h3>
<%= form_for [@post, @comment] do |form| %>

  <%= form.label 'Comment', class: ''%><br>
  <%= form.text_area :content %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<% @comments.each do |comment| %>
<p><%= comment.content %></p>
<% end %>
